{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"paths": {
			"api": ["src/api/index"],
			"api/*": ["src/api/*"],
			"utils": ["src/utils/index"],
			"utils/*": ["src/utils/*"],
			"ui": ["src/ui/index"],
			"ui/*": ["src/ui/*"],
			"frontmatter": ["src/frontmatter/index"],
			"frontmatter/*": ["src/frontmatter/*"]
		},
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"]
	},
	"include": ["src/**/*.ts", "__tests__/**/*.ts"]
}
