{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"paths": {
			"main": ["src/main"],
			"api": ["src/api/index"],
			"api/*": ["src/api/*"],
			"utils": ["src/utils/index"],
			"utils/*": ["src/utils/*"],
			"ui": ["src/ui/index"],
			"ui/*": ["src/ui/*"],
			"frontmatter": ["src/frontmatter/index"],
			"frontmatter/*": ["src/frontmatter/*"],
			"services": ["src/services/index"],
			"services/*": ["src/services/*"]
		},
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["__tests__/**/*", "__mocks__/**/*", "node_modules"]
}
